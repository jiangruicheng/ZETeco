<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              tools:context="com.zkteco.bigboss.ui.fragment.RegisFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorButtonLogin"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/whiteback"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="下一步"
            android:textColor="@color/colorWhite"
            android:textSize="19sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:background="@drawable/icon_register_phone_number"/>

        <EditText
            android:id="@+id/phonenumb"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:hint="手机号"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:background="@drawable/icon_verification"/>

        <EditText
            android:id="@+id/IDcode"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:hint="验证码"
            android:textColor="@color/colorHintText"
            android:textColorHint="@color/colorHintText"/>

        <TextView
            android:id="@+id/getIDcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="76dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorButtonLogin"
            android:textSize="19sp"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_background_leave">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorButtonLogin"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:background="@drawable/icon_arrow_left"
                android:onClick="onClick"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="签卡申请"
                android:textColor="@color/colorWhite"
                android:textSize="21sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_leave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="42dp">

            <TextView
                android:id="@+id/signcard_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="签卡种类"
                android:textColor="@color/blak"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/sign_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" "
                android:textColor="@color/blak"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/signcard_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signcard_types"
                android:layout_marginTop="24dp"
                android:onClick="onClick"
                android:text="签卡时间"
                android:textColor="@color/blak"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/select_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sign_card_type"
                android:layout_marginTop="24dp"
                android:text="2016-10-10 10:33"
                android:textColor="@color/blak"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/finish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signcard_start_time"
                android:layout_marginTop="24dp"
                android:onClick="onClick"
                android:text="请假开始时间"
                android:textColor="@color/blak"
                android:textSize="21sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/select_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/select_start_time"
                android:layout_marginTop="24dp"
                android:text="2016-10-10 03:33"
                android:textColor="@color/blak"
                android:textSize="21sp"
                android:visibility="gone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@id/finish_time"
                android:layout_marginTop="12dp"
                android:hint="请填写签卡理由"
                android:textColorHint="@color/colorHintText"
                android:textSize="19sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_leave"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="68dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imag_approvaler"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/imag_login_80"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text="审批人"
                android:textColor="@color/colorHintText"
                android:textSize="21sp"/>

            <Button
                android:id="@+id/select_approvaler"
                android:layout_width="148dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:background="#00000000"
                android:text="选择审批人 >"
                android:textColor="@color/blak"

                android:textSize="21sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/makesure"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorButtonLogin"
            android:text="提交申请"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"/>
    </RelativeLayout>
</LinearLayout>
